{% from "../partials/cta.njk" import cta %}

{% macro text(info) %}

  {% if info.titlePrefix %}
    <p class="prefix">{{ info.titlePrefix }}</p>
  {% endif %}

  {% if info.title %}
    {% if info.header === "h1" %}
      <h1>{{ info.title }}</h1>
    {% elif info.header === "h2" %}
      <h2>{{ info.title }}</h2>
    {% else %}
      <h3>{{ info.title }}</h3>
    {% endif %}
  {% endif %}

  {% if info.subTitle %}
    <p class="sub-title">{{ info.subTitle }}</p>
  {% endif %}

  {% if info.body %}
    <div>{{ info.body | mdToHTML | safe }}</div>
  {% endif %}

  {% if info.cta and info.cta.url %}
    {{ cta(info.cta) }}
  {% endif %}

{% endmacro %}